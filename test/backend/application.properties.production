# 生產環境配置模板
# 此文件僅供參考，實際配置應通過環境變數設置

spring.application.name=reactweb-backend

# 資料庫配置 - 從環境變數讀取
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:mysql://localhost:3306/food_order_system?useSSL=true&serverTimezone=Asia/Hong_Kong&characterEncoding=utf8}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:root}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:}

# JPA 配置
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=false

# 伺服器配置
server.port=${PORT:8080}

# CORS 配置 - 從環境變數讀取
cors.allowed-origins=${CORS_ALLOWED_ORIGINS:http://localhost:5173}

# JWT 配置 - 從環境變數讀取
security.jwt.secret=${SECURITY_JWT_SECRET:please_change_me_to_a_long_random_string_at_least_32_chars}
security.jwt.expiration-minutes=${SECURITY_JWT_EXPIRATION_MINUTES:60}

# 生產環境日誌配置
server.error.include-stacktrace=never
server.error.include-message=on_param

logging.level.com.mustudy.reactweb_backend=INFO
logging.level.org.springframework.web=WARN
logging.level.org.hibernate.SQL=WARN



